nclude<stdio.h>
#include<math.h>
void main()
{
	int n,r,sum=0,m;
	m=n;
	printf("ENTER ANY NUMBER \n");
	scanf("%d",&n);
	while (n>0)
	{
	r=n%10;		//Eg : 122%10=2	//12%10=2//1%10=1
	sum=sum+r;	//Eg: 0=0+2//2=2+2//4=4+1
	n=n/10;		//Eg : 122/10=12//12/10=1//1/10=0
	}
	printf("\n sum of the digits : %d",sum);
	getch();
	
}
